# Maintainer: Fabian Bornschein <fabiscafe@archlinux.org>

pkgbase=msgraph
pkgname=(
  msgraph
  msgraph-docs
)
pkgver=0.2.1
pkgrel=3
pkgdesc="A shared library for accessing MS Graph API"
url="https://gitlab.gnome.org/GNOME/msgraph"
arch=(loong64 x86_64)
license=(LGPL-3.0-or-later)
depends=(
  gcc-libs
  glib2
  glibc
  json-glib
  libgoa
  librest
  libsoup3
)
makedepends=(
  gi-docgen
  git
  gobject-introspection
  meson
  uhttpmock
)
source=("git+https://gitlab.gnome.org/GNOME/msgraph.git#tag=$pkgver")
b2sums=('ecdc92424c477d512ff2b9de1c61c6bf8fd2a3dcedc4ec2c9a9a20d2e43e4316c107d50037781185f73b86b55c389b7a53f72ebd52be0d6a76ded0572ac6109a')

prepare() {
  cd msgraph
}

build() {
  arch-meson msgraph build
  meson compile -C build
}

check() {
  meson test -vC build --print-errorlogs
}

package_msgraph() {
  meson install -C build --destdir "$pkgdir"
  
  mkdir -p doc/usr/share
  mv {"$pkgdir",doc}/usr/share/doc
}

package_msgraph-docs() {
  pkgdesc+=" (documentation)"
  depends=()

  mv doc/* "$pkgdir"
}

# vim:set sw=2 sts=-1 et:
