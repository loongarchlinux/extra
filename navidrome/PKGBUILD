pkgname=navidrome
pkgver=0.52.5
pkgrel=1
pkgdesc='A web-based music collection server and streamer'
arch=('loong64' 'x86_64')
url='https://www.navidrome.org'
license=('GPL-3.0-only')
depends=(
  'glibc'
  'gcc-libs'
  'zlib'
  'ffmpeg'
  'taglib'
)
makedepends=(
  'git'
  'go'
  'npm'
  'nodejs'
)
backup=('etc/navidrome/navidrome.toml')
options=('!lto')
source=(
  "$pkgname::git+https://github.com/navidrome/navidrome#tag=v$pkgver"
  'systemd.service'
  'sysusers.conf'
  'tmpfiles.conf'
  'config.toml'
)
