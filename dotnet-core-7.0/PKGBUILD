pkgname=(
 dotnet-runtime-7.0
 aspnet-runtime-7.0
 dotnet-sdk-7.0
 dotnet-targeting-pack-7.0
 aspnet-targeting-pack-7.0
 dotnet-source-built-artifacts-7.0
)
pkgver=7.0.18.sdk118
pkgrel=1
arch=(loong64 x86_64)
url=https://www.microsoft.com/net/core
license=(MIT)
makedepends=(
  bash
  clang
  cmake
  dotnet-sdk-7.0
  dotnet-source-built-artifacts-7.0
