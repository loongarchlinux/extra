# Maintainer: Maxime Gauduin <alucryd@archlinux.org>
# Contributor: quietvoid <tcChlisop0@gmail.com>

pkgname=dovi-tool
pkgver=2.1.1
pkgrel=2
pkgdesc='CLI tool combining multiple utilities for working with Dolby Vision'
arch=(loong64 x86_64)
url=https://github.com/quietvoid/dovi_tool
license=(MIT)
makedepends=(
  cargo
  git
  gnu-free-fonts
)
depends=(fontconfig)
_tag=108f7892fa9c5c5b24caec29f2289cf805e52119
source=(git+https://github.com/quietvoid/dovi_tool.git#tag=${_tag})
b2sums=(SKIP)

prepare() {
  cargo fetch \
    --locked \
    --manifest-path dovi_tool/Cargo.toml
}

pkgver() {
  cd dovi_tool
  git describe --tags
}

build() {
  cargo build \
    --release \
    --frozen \
    --manifest-path dovi_tool/Cargo.toml
}

check() {
  cargo test \
    --release \
    --frozen \
    --manifest-path dovi_tool/Cargo.toml
}

package() {
  cargo install \
    --frozen \
    --offline \
    --no-track \
    --path dovi_tool \
    --root "${pkgdir}"/usr
  install -Dm 644 dovi_tool/LICENSE -t "${pkgdir}"/usr/share/licenses/dovi-tool/
}

# vim: ts=2 sw=2 et:
