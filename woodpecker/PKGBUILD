pkgname=(
  'woodpecker-server'
  'woodpecker-agent'
  'woodpecker-cli'
)
pkgver=2.7.0
pkgrel=1
pkgdesc='A simple CI engine with great extensibility'
arch=('loong64' 'x86_64')
url='https://woodpecker-ci.org'
