pkgbase=surge-xt
pkgname=(
  'surge-xt'
  'surge-xt-common'
  'surge-xt-standalone'
  'surge-xt-vst3'
  'surge-xt-clap'
)
pkgver=1.3.1
pkgrel=1
pkgdesc='Subtractive hybrid synthesizer'
arch=('loong64' 'x86_64')
url='https://surge-synthesizer.github.io'
license=('GPL3')
groups=('pro-audio')
_common_depends=(
