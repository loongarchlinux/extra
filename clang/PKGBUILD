pkgname=clang
pkgver=13.0.1
_rdate=20220505
pkgrel=1
pkgdesc="C language family frontend for LLVM"
arch=('loong64' 'x86_64')
url="https://clang.llvm.org/"
license=('custom:Apache 2.0 with LLVM Exception')
depends=('llvm-libs' 'gcc' 'compiler-rt')
makedepends=('llvm' 'cmake' 'ninja' 'python-sphinx' 'python-recommonmark')
optdepends=('openmp: OpenMP support in clang with -fopenmp'
            'python: for scan-view and git-clang-format'
            'llvm: referenced by some clang headers')
provides=("clang-analyzer=$pkgver" "clang-tools-extra=$pkgver")
conflicts=('clang-analyzer' 'clang-tools-extra')
replaces=('clang-analyzer' 'clang-tools-extra')
_source_base=http://sources.loongarch.org:2020/archlinux/sources
source=($_source_base/$pkgname-$pkgver-${_rdate}.tar.xz
        $_source_base/clang-tools-extra-$pkgver-${_rdate}.tar.xz
        $_source_base/llvm-$pkgver-${_rdate}.tar.xz
        fix-scan-build-py-executable-lookup-path.patch
        strip-exception-specifications-in-CFI-type-names.patch
        enable-SSP-and-PIE-by-default.patch)
sha256sums=('7999b3a6e1e4544fbd80cd7d643e0f16d0e71418b897432d875f3319e3830664'
            '5166f21eaf5d69b621754ef3996cf15bf61835ff9f9b47f3dee440eb52ac3136'
            '5af8782456df8199da714978a9a0759e395d6f4756d48c20bf7e42ec5e5881b5'
