pkgname=quodlibet
pkgver=4.6.0
pkgrel=2
pkgdesc="Music player and music library manager"
arch=(any)
url="https://quodlibet.readthedocs.io/"
license=(GPL-2.0-or-later)
depends=(
  dbus-python
  gdk-pixbuf2
  gobject-introspection-runtime
  gstreamer
  gst-plugins-base
  gst-plugins-base-libs
  gtk3
  hicolor-icon-theme
  libsoup3
  pango
