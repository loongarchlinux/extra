  python-build
  python-installer
  python-setuptools
  python-sphinx_rtd_theme
  python-wheel
)
# python-raven python-senf are currently vendored
checkdepends=(
  gst-plugins-bad
  gst-plugins-good
  gst-plugins-ugly
