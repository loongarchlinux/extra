pkgname=conmon
pkgver=2.1.11
pkgrel=1
epoch=1
pkgdesc='OCI container runtime monitor'
arch=(loong64 x86_64)
url='https://github.com/containers/conmon'
license=(APACHE)
depends=(glibc glib2 systemd)
makedepends=(git)
source=(
  "git+https://github.com/containers/conmon#commit=v${pkgver}"
)
b2sums=('deabbff37c0ffb12efae05a02cadf2a9dffd658cbf57e27a3d87cf27440e7bd4298b6059f411533f79bdf45f6f4651a135aaf356f401970bcb3e4633d8c2eabc')

build() {
  cd conmon
  make PREFIX=/usr LIBEXECDIR=/usr/lib DESTDIR="$pkgdir"
}

package() {
  install -Dm755 conmon/bin/conmon "$pkgdir/usr/bin/conmon"
}
